{% extends 'base.html.twig' %}

{% block title %}Contact details{% endblock %}

{% block body %}
    <h2>Contact {{ id }} details</h2>

    <h3>First name</h3>
    <p>{{ contact.firstName }}</p>

    <h3>Last name</h3>
    <p>{{ contact.lastName }}</p>

    {% if contact.email %}
        <h3>Email</h3>
        <p>{{ contact.email }}</p>
    {% endif %}

    {% if contact.phone %}
        <h3>Phone</h3>
        <p>{{ contact.phone }}</p>
    {% endif %}
{% endblock %}
