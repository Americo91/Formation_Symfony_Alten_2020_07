{% extends 'base.html.twig' %}

{% block title %}Contact details{% endblock %}

{% block body %}
    <h2>Contact {{ id }} details</h2>

    <h3>First name</h3>
    <p>{{ contact.firstName }}</p>

    <h3>Last name</h3>
    <p>{{ contact.lastName }}</p>

    {% if contact.email %}
        <h3>Email</h3>
        <p>{{ contact.email }}</p>
    {% endif %}

    {% if contact.phone %}
        <h3>Phone</h3>
        <p>{{ contact.phone }}</p>
    {% endif %}

    {% if contact.company %}
        <h3>Company</h3>
        <p>{{ contact.company.name }}</p>
    {% endif %}

    {% if contact.superior %}
        <h3>Superior</h3>
        <p>{{ contact.superior.firstName }} {{ contact.superior.lastName }}</p>
    {% endif %}

    {% if contact.groups | length > 0 %}
        <h3>Groups</h3>
        <p>
            {% for g in contact.groups %}
            <span class="badge badge-pill badge-secondary">{{ g.name }}</span>
            {% endfor %}
        </p>
    {% endif %}
{% endblock %}
